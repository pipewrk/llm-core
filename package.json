{
  "name": "@jasonnathan/llm-core",
  "description": "Composable TypeScript toolkit for LLM pipelines, semantic chunking, and AI workflow orchestration.",
  "author": "Jason Nathan <jjnathanjr@pm.me> (https://github.com/pipewrk)",
  "version": "1.9.1",
  "homepage": "https://github.com/pipewrk/llm-core",
  "bugs": {
    "url": "https://github.com/pipewrk/llm-core/issues"
  },
  "sideEffects": false,
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "llm",
    "large language models",
    "pipeline",
    "orchestration",
    "semantic chunking",
    "cosine similarity",
    "text processing",
    "rag",
    "retrieval augmented generation",
    "typescript",
    "openai",
    "ollama",
    "embeddings",
    "markdown splitting",
    "chunking",
    "ai workflows"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./batch-openai-pipeline": {
      "import": "./dist/index.js",
      "types": "./dist/core/batch-openai-pipeline.d.ts"
    },
    "./helpers": {
      "import": "./dist/index.js",
      "types": "./dist/core/helpers.d.ts"
    },
    "./cosine-similarity": {
      "import": "./dist/index.js",
      "types": "./dist/core/cosine-similarity.d.ts"
    },
    "./ollama-service": {
      "import": "./dist/index.js",
      "types": "./dist/core/ollama-service.d.ts"
    },
    "./pipeline": {
      "import": "./dist/index.js",
      "types": "./dist/core/pipeline.d.ts"
    },
    "./similarity-greedy": {
      "import": "./dist/index.js",
      "types": "./dist/core/similarity-greedy.d.ts"
    },
    "./llm-service": {
      "import": "./dist/index.js",
      "types": "./dist/core/llm-service.d.ts"
    },
    "./openai-service": {
      "import": "./dist/index.js",
      "types": "./dist/core/openai-service.d.ts"
    },
    "./runtime": {
      "import": "./dist/index.js",
      "types": "./dist/core/runtime.d.ts"
    },
    "./batch-steps": {
      "import": "./dist/index.js",
      "types": "./dist/core/batch-steps.d.ts"
    },
    "./logger": {
      "import": "./dist/index.js",
      "types": "./dist/core/logger.d.ts"
    },
    "./batch-openai-service": {
      "import": "./dist/index.js",
      "types": "./dist/core/batch-openai-service.d.ts"
    },
    "./similarity-service": {
      "import": "./dist/index.js",
      "types": "./dist/core/similarity-service.d.ts"
    },
    "./chunker": {
      "import": "./dist/index.js",
      "types": "./dist/core/chunker.d.ts"
    },
    "./markdown-splitter": {
      "import": "./dist/index.js",
      "types": "./dist/core/markdown-splitter.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "exp": "ts-node ./src/test.ts ",
    "build": "bun run scripts/build.ts",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "typecheck:tests": "tsc -p tsconfig.tests.json --noEmit",
    "typecheck:all": "tsc -p tsconfig.json --noEmit",
    "prepare": "bun run build",
    "prepublishOnly": "bun run build",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pipewrk/llm-core.git"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "@types/cli-progress": "^3.11.6",
    "@types/html-to-text": "^9.0.4",
    "@types/winston": "^2.4.4",
    "cli-progress": "^3.12.0",
    "standard-version": "^9.5.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@huggingface/transformers": "^3.4.0",
    "ai-zero-shot-classifier": "^0.0.8"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "html-to-text": "^9.0.5",
    "mdast": "^3.0.0",
    "openai": "^5.20.3",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "sentence-splitter": "^5.0.0",
    "std-env": "^3.8.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "winston": "^3.17.0"
  }
}
